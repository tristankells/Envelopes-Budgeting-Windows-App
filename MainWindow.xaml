<Window x:Class="Envelopes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:envelopes="clr-namespace:Envelopes"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance envelopes:IMainWindowViewModel}"
        Title="Envelopes" Height="900" Width="1600">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button Command="{Binding SaveBudgetCommand }" Content="Save"></Button>
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Command="{Binding NavigateToTransactionsPageCommand }" Content="Transactions"></Button>
                <Button Grid.Column="1" Command="{Binding NavigateToBudgetPageCommand }" Content="Budget"></Button>
            </Grid>
            <TextBlock FontSize="20" HorizontalAlignment="Center" Text="Remaining To Budget"/><TextBlock FontSize="20" HorizontalAlignment="Center" Text="{Binding RemainingBalanceToBudget}"/>
            <ContentControl Content="{Binding CurrentPage}"/>
        </StackPanel>
    </Grid>
</Window>
