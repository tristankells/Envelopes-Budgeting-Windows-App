<Window x:Class="Envelopes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:envelopes="clr-namespace:Envelopes"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance envelopes:IMainWindowViewModel}"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button Command="{Binding NavigateToTransactionsPageCommand }" Content="Transactions"></Button>
            <Button Command="{Binding NavigateToBudgetPageCommand }" Content="Budget"></Button>
            <ContentControl Content="{Binding CurrentPage}"/>
        </StackPanel>
    </Grid>
</Window>
